<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewAll">

    <ImageView
        android:id="@+id/viewImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"/>

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/trash"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imglist1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/white" />

            <ImageView
                android:id="@+id/imglist2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/green" />

            <ImageView
                android:id="@+id/imglist3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sky" />

            <ImageView
                android:id="@+id/imglist4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mountain" />

            <ImageView
                android:id="@+id/imglist5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/rainbow" />

            <ImageView
                android:id="@+id/imglist6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/clock" />

            <ImageView
                android:id="@+id/imglist7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/red" />

            <ImageView
                android:id="@+id/imglist8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/purple" />

            <ImageView
                android:id="@+id/imglist9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/computer" />

            <ImageView
                android:id="@+id/imglist10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/orange" />
        </LinearLayout>


    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/trash"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:padding="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/trash"
        android:background="#ffffff"
        style="?android:attr/borderlessButtonStyle"/>

    <ToggleButton
        android:id="@+id/heart1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/emptyheart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textOn=""
        android:textOff=""
        style="?android:attr/borderlessButtonStyle"/>

    <ToggleButton
        android:id="@+id/heart2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/emptyheart"
        app:layout_constraintBottom_toBottomOf="parent"
