<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crawling_3"
    android:id="@+id/activity_crawling_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Date"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/noResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#373737"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/recyclerView_sport"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/datePicker" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_sport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-50dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/datePicker"/>



    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:layout_gravity="start"
        android:background="#48000000"
        android:gravity="center">

        <ImageButton
            android:id="@+id/crawling_1_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="네이버"
            android:src="@drawable/naver"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_marginBottom="50dp"/>

        <ImageButton
            android:id="@+id/crawling_2_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="뉴스"
            android:src="@drawable/navernews_stand_20160802"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_marginBottom="50dp"/>

        <ImageButton
            android:id="@+id/crawling_3_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="야구 경기"
            android:src="@drawable/kbo"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>